<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="su.bnet.aton.activity.LoginActivity"
    android:background="@drawable/background_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLogin"
        >
        <RelativeLayout
            android:id="@+id/activity_login"
            android:layout_width="233dp"
            android:layout_height="match_parent"

            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/aton"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:id="@+id/imageView2" />

            <TextView
                android:textAppearance="@style/TextAppearance.Gotham.Medium"
                android:text="Личный кабинет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="133dp"
                android:id="@+id/textView2"
                android:textSize="@dimen/font_43pt"
                android:textAllCaps="true" />

            <EditText
                android:textAppearance="@style/TextAppearance.Gotham.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="логин или номер телефона"
                android:ems="10"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="29dp"
                android:id="@+id/editText"
                style="@style/AppTheme_EditTextStyle" />

            <TextView
                android:textAppearance="@style/TextAppearance.Gotham.Medium"
                android:textSize="@dimen/font_43pt"
                android:background="?android:attr/selectableItemBackground"
                android:text="Войти"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:id="@+id/textViewLogin"
                android:textAllCaps="true"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:clickable="true" />

            <TextView
                android:textAppearance="@style/TextAppearance.Gotham.Light"
                android:textSize="@dimen/font_34pt"
                android:background="?android:attr/selectableItemBackground"
                android:text="Забыли пароль?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewLogin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewForget"
                android:paddingBottom="12dp"
                android:clickable="true" />

            <CheckBox
                android:textAppearance="@style/TextAppearance.Gotham.Light"
                android:textSize="@dimen/font_34pt"
                android:textColor="@android:color/white"
                android:text="  Установить код доступа"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/checkBox"
                android:layout_below="@+id/editText2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/AppTheme.CheckBox.White" />

            <TextView
                android:textAppearance="@style/TextAppearance.Gotham.Light"
                android:textSize="@dimen/font_25pt"
                android:text="Служба поддержки"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp" />

            <TextView
                android:textAppearance="@style/TextAppearance.Gotham.Light"
                android:textSize="@dimen/font_43pt"
                android:background="?android:attr/selectableItemBackground"
                android:text="8 (800) 333-66-77"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:drawableLeft="@drawable/phone_splash"
                android:drawablePadding="4dp"
                android:layout_above="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:clickable="true" />

            <EditText
                android:textAppearance="@style/TextAppearance.Gotham.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="пароль"
                android:ems="10"
                android:layout_marginTop="12dp"
                android:id="@+id/editText2"
                style="@style/AppTheme_EditTextStyle"
                android:layout_below="@+id/editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/framePin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="60dp">
        <su.bnet.aton.view.PinBoardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:id="@+id/viewPinBoard"
            />
    </FrameLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/framePin2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="60dp">
        <su.bnet.aton.view.PinBoardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:id="@+id/viewPinBoard2"
            app:pin_routine="INPUT"
            />
    </FrameLayout>

</FrameLayout>



