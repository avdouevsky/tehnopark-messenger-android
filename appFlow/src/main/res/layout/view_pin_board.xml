<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- android:background="@drawable/background_gradient"-->
    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout"
            android:weightSum="4"
            android:layout_height="200dp"
            android:layout_width="190dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView1"
                    android:text="1"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
                <TextView
                    android:id="@+id/textView2"
                    android:text="2"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
                <TextView
                    android:id="@+id/textView3"
                    android:text="3"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/textView4"
                    android:text="4"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
                <TextView
                    android:id="@+id/textView5"
                    android:text="5"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
                <TextView
                    android:id="@+id/textView6"
                    android:text="6"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/textView7"
                    android:text="7"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
                <TextView
                    android:id="@+id/textView8"
                    android:text="8"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
                <TextView
                    android:id="@+id/textView9"
                    android:text="9"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:gravity="center_vertical|center_horizontal" />
                <TextView
                    android:id="@+id/textView0"
                    android:text="0"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
                <ImageView
                    android:id="@+id/imageViewBackspace"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_backspace"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Gotham.Light"
                    android:textSize="@dimen/font_100pt"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewMessage"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical|center_horizontal"
            android:text="Отправить код еще раз\nНажмите на любое свободное место для перехода на следующий экран"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Gotham.Light"
            android:textSize="@dimen/font_27pt"
            android:textColor="@android:color/white"
            />

        <LinearLayout
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout">
            <LinearLayout
                android:id="@+id/linearLayoutPin1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="4"
                android:padding="5dp"
                android:layout_height="40dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/circle_white"
                    android:id="@+id/imageView7"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/circle_white"
                    android:id="@+id/imageView8"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/circle_white"
                    android:id="@+id/imageView9"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/circle_white"
                    android:id="@+id/imageView10"
                    android:layout_weight="1" />
            </LinearLayout>
            <TextView
                android:text="Введите код"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMsg1"
                android:textColor="@android:color/white"
                android:gravity="center_vertical|center_horizontal"
                android:lines="3"
                android:textSize="@dimen/font_27pt"
                android:textAppearance="@style/TextAppearance.Gotham.Light"
                />

            <LinearLayout
                android:id="@+id/linearLayoutPin2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="4"
                android:padding="5dp"
                android:layout_height="40dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/circle_white"
                    android:id="@+id/imageView3"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/circle_white"
                    android:id="@+id/imageView4"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/circle_white"
                    android:id="@+id/imageView5"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/circle_white"
                    android:id="@+id/imageView6"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:text="Введите код еще раз"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMsg2"
                android:textColor="@android:color/white"
                android:gravity="center_vertical|center_horizontal"
                android:lines="3"
                android:textSize="@dimen/font_27pt"
                android:textAppearance="@style/TextAppearance.Gotham.Light"
                />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>