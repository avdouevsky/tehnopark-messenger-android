<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#394b58</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:editTextStyle">@style/AppTheme_EditTextStyle</item>

        <item name="android:lineSpacingExtra">2pt</item><!-- так как шрифт кривой, приходится делать расстояние -->
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:editTextStyle">@style/AppTheme_EditTextStyle</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Drawer">
        <item name="android:textSize">@dimen/font_38pt</item><!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">33dp</item><!-- menu item height-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_back</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#A4B7C5</item>
        <item name="android:padding">9dp</item>
        <item name="android:textSize">@dimen/font_34pt</item>
    </style>

    <style name="AppTheme.CheckBox.White" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_white</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <!--<item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>-->
        <item name="android:background">#dbdcec</item>
        <!--<item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/range</item>-->
    </style>

    <!-- ==================== TextAppearances ==================== -->
    <!-- Black -->
    <style name="TextAppearance.Gotham.Black" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Black.ttf</item>
    </style>
    <style name="TextAppearance.Gotham.Black.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Black-Italic.ttf</item>
    </style>

    <!-- Regular -->
    <style name="TextAppearance.Gotham" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Reg.ttf</item>
    </style>
    <style name="TextAppearance.Gotham.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Bold.ttf</item>
    </style>
    <style name="TextAppearance.Gotham.Bold.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Bold-Italic.ttf</item>
    </style>
    <style name="TextAppearance.Gotham.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Italic.ttf</item>
    </style>

    <!-- Light -->
    <style name="TextAppearance.Gotham.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Light.ttf</item>
    </style>
    <style name="TextAppearance.Gotham.LightItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Light-Italic.ttf</item>
    </style>

    <!-- Medium -->
    <style name="TextAppearance.Gotham.Medium" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Medium.ttf</item>
    </style>
    <style name="TextAppearance.Gotham.Medium.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Medium-Italic.ttf</item>
    </style>

    <!-- Narrow -->
    <style name="TextAppearance.Gotham.Narrow.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Narrow-Bold.ttf</item>
    </style>
    <style name="TextAppearance.Gotham.Narrow.Medium" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Narrow-Medium.ttf</item>
    </style>

    <style name="TextAppearance.Gotham.Drawer" parent="TextAppearance.Gotham.Light">
        <item name="android:textSize">@dimen/font_38pt</item>
    </style>
    <style name="TextAppearance.Gotham.Tab" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Reg.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_27pt</item>
    </style>
</resources>
