<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark_blue_to_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bleeping_dot_10"
                android:layout_marginLeft="10dp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bleeping_dot_20"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bleeping_dot_50"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incoming_call_title"
            android:textColor="@color/colorWhiteText"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.09"
            android:textAppearance="@style/TextAppearance.Gotham.Bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bleeping_dot_50"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bleeping_dot_20"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bleeping_dot_10"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/denied_call_title_call_type"
        android:textColor="@color/colorWhiteText"
        android:textSize="15sp"
        android:letterSpacing="0.09"
        android:textAppearance="@style/TextAppearance.Gotham.Bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <FrameLayout
        android:layout_width="204dp"
        android:layout_height="204dp"
        android:layout_gravity="center"
        android:background="@drawable/profile_icon_circle_cover_out"
        android:layout_marginTop="44dp">

        <ImageView
            android:layout_width="183dp"
            android:layout_height="183dp"
            android:layout_gravity="center"
            android:id="@+id/fragment_call_denied_image_picture" />
    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incoming_call_profile_name"
        android:textColor="@color/colorWhiteText"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="27dp"
        android:minLines="2"
        android:textSize="36sp"
        android:textAppearance="@style/TextAppearance.Gotham"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/incoming_call_department"
        android:textColor="@color/colorWhiteText"
        android:textSize="15sp"
        android:letterSpacing="0.09"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.Gotham" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/incoming_call_position"
        android:textColor="@color/colorWhiteText"
        android:textSize="15sp"
        android:letterSpacing="0.09"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.Gotham" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="30sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="38dp">

            <FrameLayout
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/call_button_background_denied"
                android:layout_gravity="right"
                android:id="@+id/fragment_call_denied_fl_cancel">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/cancel_window"
                    android:layout_gravity="center"
                    />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/denied_call_first_icon"
                android:textColor="@color/colorWhiteText"
                android:textSize="15sp"
                android:letterSpacing="0.09"
                android:layout_gravity="right"
                android:layout_marginTop="21dp"
                android:layout_marginRight="15dp"
                android:textAppearance="@style/TextAppearance.Gotham"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/call_button_background_green"
                android:layout_gravity="center"
                android:layout_marginTop="38dp"
                android:id="@+id/fragment_call_denied_fl_callback">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/accept_call"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/denied_call_second_icon"
                android:textColor="@color/colorWhiteText"
                android:textSize="15sp"
                android:letterSpacing="0.09"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:textAppearance="@style/TextAppearance.Gotham"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="18dp">

            <FrameLayout
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/call_button_background_denied"
                android:layout_gravity="left"
                android:layout_marginTop="38dp"
                android:id="@+id/fragment_call_denied_fl_message">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/message"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/denied_call_third_icon"
                android:textColor="@color/colorWhiteText"
                android:textAppearance="@style/TextAppearance.Gotham"
                android:textSize="15sp"
                android:letterSpacing="0.09"
                android:layout_gravity="left"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>