<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="18dp"
    android:paddingRight="18dp">

    <ImageView
        android:layout_marginRight="13dp"
        android:layout_height="@dimen/chat_item_avatar_size"
        android:layout_width="@dimen/chat_item_avatar_size"
        android:layout_marginLeft="17dp"
        android:src="@drawable/icon_user"
        android:id="@+id/imFace"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="Александ Пушкин"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorBlueTextPrimary"
            android:textAppearance="@style/TextAppearance.Gotham.Bold"
            android:id="@+id/tvName"
            android:layout_toRightOf="@+id/imFace"
            android:layout_toEndOf="@+id/imFace" />

    <TextView
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Спасибо за информацию!"
        android:textSize="12sp"
        android:textColor="@color/backgroundGrey"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:letterSpacing="0.03"
        android:id="@+id/recycler_item_chatslist_tv_message"
        android:textAppearance="@style/TextAppearance.Gotham.Bold"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/imFace"
        android:layout_toLeftOf="@+id/recycler_item_chatslist_tv_notification"
        android:layout_toRightOf="@+id/imFace"
        android:layout_toStartOf="@+id/recycler_item_chatslist_tv_notification"
        android:layout_toEndOf="@+id/imFace" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_online"
        android:id="@+id/recycler_item_chatslist_image_online"
        android:layout_alignBottom="@+id/imFace"
        android:layout_alignRight="@+id/imFace"
        android:layout_alignEnd="@+id/imFace"
        android:layout_marginBottom="-7dp"
        android:layout_marginRight="14.5dp"
        android:layout_marginEnd="14.5dp" />

