<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/fragment_chat_toolbar"
        android:id="@+id/include" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_chat_rv_messages"
        fontPath="fonts/GothamProBold.ttf"
        android:background="#F2F2F2"
        android:layout_below="@+id/include"
        android:layout_above="@+id/viewMessageEdit"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clipToPadding="false"/>

    <com.mshvdvskgmail.technoparkmessenger.view.MessageEditView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/viewMessageEdit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
