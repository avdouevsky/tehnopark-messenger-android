<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">

        <ImageView
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pushkin"
            android:textColor="#0f2745"
            android:background="@drawable/message_incoming_background"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/picture"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            fontPath="fonts/GothamPro.ttf"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00"
                android:textColor="@color/colorWhiteText"
                android:textSize="10sp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="bottom"
                android:id="@+id/time"
                fontPath="fonts/GothamProLight.ttf"/>

            <FrameLayout
                android:layout_width="17dp"
                android:layout_height="15dp"
                ></FrameLayout>


        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_message_corner_pic_incoming"
        android:layout_gravity="bottom"
        android:layout_marginTop="-18dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/corner"/>
</LinearLayout>