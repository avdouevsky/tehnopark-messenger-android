<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:id="@+id/imDirection"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="3dp"/>

            <ImageView
                android:layout_height="43dp"
                android:layout_width="43dp"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="18dp"
                android:id="@+id/recycler_item_calls_image_picture">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_online"
                android:id="@+id/recycler_item_calls_image_online"
                android:paddingStart="53dp"
                android:paddingTop="55dp"
                android:paddingLeft="53dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Александ Пушкин"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="19dp"
                android:layout_marginStart="13dp"
                android:textColor="@color/colorBlueTextPrimary"
                android:textAppearance="@style/TextAppearance.Gotham.Bold"
                android:id="@+id/recycler_item_calls_tv_name"
                android:layout_marginLeft="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:25"
                android:textSize="12sp"
                android:textColor="@color/backgroundGrey"
                android:paddingTop="8sp"
                android:layout_marginStart="13dp"
                android:maxLines="1"
                android:letterSpacing="0.03"
                android:id="@+id/recycler_item_calls_tv_time"
                android:textAppearance="@style/TextAppearance.Gotham"
                android:layout_marginLeft="13dp"
                android:ellipsize="end"
                android:maxWidth="190dp"/>


        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_mini"
            android:layout_marginTop="22dp"
            android:layout_marginRight="14dp"
            android:id="@+id/recycler_item_calls_image_call"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/recycler_item_calls_fl_separator"
        android:background="@color/colorBlackTransparentTwenty"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="17dp">
    </FrameLayout>
</LinearLayout>