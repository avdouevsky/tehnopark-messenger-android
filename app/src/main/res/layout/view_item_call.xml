<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="18dp"
    android:paddingRight="18dp"
    android:paddingLeft="18dp">
    <ImageView
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:id="@+id/imDirection"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_calls_inc"
        android:layout_alignBottom="@+id/imFace"
        android:layout_marginRight="7dp"
        />

    <ImageView
        android:layout_marginRight="13dp"
        android:layout_height="@dimen/chat_item_avatar_size"
        android:layout_width="@dimen/chat_item_avatar_size"
        android:src="@drawable/icon_user"
        android:id="@+id/imFace"
        android:layout_toRightOf="@+id/imDirection"
        android:layout_toEndOf="@+id/imDirection"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="Александ Пушкин"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorBlueTextPrimary"
        android:textAppearance="@style/TextAppearance.Gotham.Bold"
        android:id="@+id/tvName"
        android:layout_toRightOf="@+id/imFace"
        android:layout_toEndOf="@+id/imFace"
        android:layout_toLeftOf="@+id/recycler_item_calls_image_call"
        android:layout_toStartOf="@+id/recycler_item_calls_image_call"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13:23"
        android:textSize="12sp"
        android:textColor="@color/backgroundGrey"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:letterSpacing="0.03"
        android:id="@+id/tvTime"
        android:textAppearance="@style/TextAppearance.Gotham"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/imFace"
        android:layout_toLeftOf="@+id/recycler_item_chatslist_tv_notification"
        android:layout_toRightOf="@+id/imFace"
        android:layout_toStartOf="@+id/recycler_item_chatslist_tv_notification"
        android:layout_toEndOf="@+id/imFace" />

