<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_gravity="right">

        <ImageView
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pushkin"
            android:textColor="#0f2745"
            android:background="@drawable/message_outgoing_background"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/recycler_item_message_picture_image_picture"
            fontPath="fonts/GothamPro.ttf"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00"
                android:textColor="@color/colorWhiteText"
                android:textSize="10sp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="bottom"
                android:id="@+id/recycler_item_message_picture_tv_time"
                fontPath="fonts/GothamProLight.ttf"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message_read"
                android:visibility="visible"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom"
                android:id="@+id/recycler_item_message_picture_image_delivery_status"/>

            <FrameLayout
                android:layout_width="17dp"
                android:layout_height="15dp"
                ></FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_message_corner_pic_outgoing"
        android:layout_gravity="right"
        android:layout_marginTop="-18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="20dp"
        android:id="@+id/recycler_item_message_picture_image_corner"/>

</LinearLayout>