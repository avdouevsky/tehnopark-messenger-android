<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#0f2745</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorBlueTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Color1SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/switcher_background_activated</item>
    </style>

    <!-- ==================== TextAppearances ==================== -->
    <!-- Black -->
    <style name="TextAppearance.Gotham.Black" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Black.ttf</item>
    </style>
    <style name="TextAppearance.Gotham.Black.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamPro-Black-Italic.ttf</item>
    </style>

    <!-- Regular -->
    <style name="TextAppearance.Gotham" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamProRegular.ttf</item>
    </style>

    <!-- Bold -->
    <style name="TextAppearance.Gotham.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/GothamProBold.ttf</item>
    </style>

    <style name="TextAppearance.Gotham.Light" parent="android:TextAppearance">
        <!--<item name="fontPath">fonts/GothamPro-Light.ttf</item>-->
        <item name="fontPath">fonts/GothamProLight.ttf</item>
    </style>

</resources>
