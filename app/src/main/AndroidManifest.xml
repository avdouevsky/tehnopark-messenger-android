    <uses-feature android:name="android.hardware.microphone" android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".TechnoparkApp">
        <activity android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    <activity android:name=".activities.ViewerActivity"
        android:screenOrientation="portrait">
    </activity>

        <!--activity android:name=".activities.CallActivity" android:label="call_activity"/>
        <receiver android:name=".activities.IncomingCallReceiver" android:label="Call Receiver"/-->
        <service
            android:exported="false"
            android:name=".services.RabbitMQService"
            />

        <service
            android:exported="false"
            android:name="com.mshvdvskgmail.technoparkmessenger.services.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:exported="false"
            android:name="com.mshvdvskgmail.technoparkmessenger.services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>
